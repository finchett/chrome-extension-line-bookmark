{
  "name": "Line Bookmark",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Add persistent line bookmarks with notes on different places on a page and easily scroll between them",
  "author":"Ali Zeaiter",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
    },
    "permissions": [
    "activeTab"
],
  "default_locale": "en",
  "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "css": ["css/bookmark.css"],
        "js": ["js/bookmark.js"],
        "run_at": "document_end"
        }
    ],
  "web_accessible_resources": [
    "media/placeholder.svg",
    "media/close.svg"
  ],
  "offline_enabled": true
}